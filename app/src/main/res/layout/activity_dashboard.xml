<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User greeting section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/dashboard3">

            <TextView
                android:id="@+id/user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back ðŸ‘‹"
                android:textColor="#F6F6F6"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="20dp" />
        </LinearLayout>

        <!-- Farm name and add plantation button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/farm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beta Farm"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/add_plantation"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/add2"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:onClick="onaddplantationclick" />
        </LinearLayout>

        <!-- Plantations container -->
        <LinearLayout
            android:id="@+id/plantations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
