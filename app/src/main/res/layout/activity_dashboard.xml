<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"


        android:background="@drawable/dashboard3"
        >
        <!--greetings layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"

            android:padding="20dp"



            >

            <!-- User Name -->

            <!-- User Status -->
            <TextView
                android:id="@+id/user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back ðŸ‘‹,kunju"
                android:textColor="#F6F6F6"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="5dp"
                />

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <TextView
        android:id="@+id/farm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beta Farm"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="center"
        android:textSize="20dp"


        />
    <ImageView
        android:id="@+id/add_plantation"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/add2"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:onClick="onaddplantationclick"



        />
    </LinearLayout>
    <!-- body -->
    <LinearLayout
        android:id="@+id/plantations_container"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Mango Plantation Card -->

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:background="#FFEFCF"
                        android:onClick="onplantationclick"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="80dp"
                            android:src="@drawable/avocado_dashboard_icon"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/Plantaton_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avocado"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:paddingTop="3dp"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/plantation_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Plants: 500\nRipe: 320"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:textColor="#555555" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:padding="2dp"
                            >
                            <!-- editing image -->
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:src="@drawable/edit"
                                android:onClick="oneditplantationclick"
                                />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_marginLeft="50dp"
                                android:layout_height="20dp"
                                android:src="@drawable/delete1"
                                android:onClick="ondeleteplantationclick"
                                />



                        </LinearLayout>
                    </LinearLayout>


            </LinearLayout>


            <!-- second row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">





            </LinearLayout>

        </LinearLayout>


        </LinearLayout>





    </LinearLayout>

</ScrollView>