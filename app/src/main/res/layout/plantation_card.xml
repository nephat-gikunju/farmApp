<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="113dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/plantation_image"
        android:layout_width="113dp"
        android:layout_height="80dp"
        android:src="@drawable/avocado_dashboard_icon"
        android:scaleType="centerCrop" />
<LinearLayout
    android:layout_width="113dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="#FFEFCF"
    >
    <TextView
        android:id="@+id/Plantaton_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingTop="3dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/plantation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="4dp"
        android:textColor="#555555" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="2dp">

        <ImageView
            android:id="@+id/oneditplantationclick"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/ondeleteplantationclick"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="23dp"
            android:src="@drawable/delete1" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>
